{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-extension",
      "type": "npm",
      "script": "compile",
      "path": "vscode-extension/",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch-extension",
      "type": "npm",
      "script": "watch",
      "path": "vscode-extension/",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
