{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-extension",
      "type": "shell",
      "command": "bash -l -c 'cd ${workspaceFolder}/src/user_interfaces && npm run build:extension'",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "npm: watch",
      "type": "shell",
      "command": "cd ${workspaceFolder}/src/user_interfaces/vscode_extension && npm run watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "webpack",
        "source": "webpack",
        "fileLocation": ["relative", "${workspaceFolder}/src/user_interfaces/vscode_extension"],
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*webpack.*watching.*files.*",
          "endsPattern": ".*webpack.*compiled successfully.*"
        }
      }
    }
  ]
}
