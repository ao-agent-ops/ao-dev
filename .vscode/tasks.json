{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: watch",
      "type": "npm",
      "script": "watch",
      "path": "src/user_interface",
      "isBackground": true,
      "problemMatcher": {
        "owner": "webpack",
        "source": "webpack",
        "fileLocation": ["relative", "${workspaceFolder}/src/user_interface"],
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*webpack.*watching.*files.*",
          "endsPattern": ".*webpack.*compiled successfully.*"
        }
      }
    }
  ]
}
