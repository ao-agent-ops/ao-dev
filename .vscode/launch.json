{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "aco-config",
      "type": "debugpy",
      "request": "launch",
      "module": "agent_copilot.commands.config.config",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "aco-server",
      "type": "debugpy",
      "request": "launch",
      "module": "agent_copilot.commands.server",
      "args": ["restart"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "aco-launch -m <script.py> [<arg>]",
      "type": "debugpy",
      "request": "launch",
      "module": "agent_copilot.commands.launch",
      "args": ["./example_workflows/DeepResearch/single_task.py"],
      // "args": ["./example_workflows/debug_examples/openai_add_numbers.py"],
      // "args": ["./example_workflows/debug_examples/openai_chat.py"],
      // "args": ["./example_workflows/debug_examples/openai_agents.py"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/src/user_interface"
      ],
      "outFiles": [
        "${workspaceFolder}/src/user_interface/dist/**/*.js"
      ],
      "preLaunchTask": "npm: watch",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}