  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "purpose": ["debug-test", "debug-in-terminal"]
    },
    // {
    //   "name": "Python: Testing",
    //   "type": "debugpy",
    //   "request": "launch",
    //   "program": "${file}",
    //   "console": "integratedTerminal",
    //   "justMyCode": false,
    // },
    {
      "name": "ao-config",
      "type": "debugpy",
      "request": "launch",
      "module": "ao.cli.ao_config",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "ao-server",
      "type": "debugpy",
      "request": "launch",
      "module": "ao.cli.ao_server",
      "args": ["restart"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "ao-record",
      "type": "debugpy",
      "request": "launch",
      "module": "ao.cli.ao_record",
      // "args": ["./example_workflows/debug_examples/anthropic_async_add_numbers.py"],
      // "args": ["./example_workflows/debug_examples/anthropic_add_numbers.py"],
      // "args": ["./example_workflows/debug_examples/langchain_async_agent.py"],
      // "args": ["./example_workflows/debug_examples/langchain_agent.py"],
      // "args": ["./example_workflows/debug_examples/langchain_simple_chat.py"],
      // "args": ["./example_workflows/debug_examples/together_add_numbers"],
      "args": ["./example_workflows/miroflow_deep_research/single_task.py"],
      // "args": ["./example_workflows/debug_examples/mcp_simple_test.py"],
      // "args": ["./example_workflows/debug_examples/vertexai_streaming_async.py"],
      // "args": ["./example_workflows/debug_examples/vertexai_streaming.py"],
      // "args": ["./example_workflows/debug_examples/vertexai_gen_image.py"],
      // "args": ["./example_workflows/debug_examples/vertexai_add_numbers_async.py"],
      // "args": ["./example_workflows/debug_examples/vertexai_add_numbers.py"],
      // "args": ["./example_workflows/debug_examples/openai_document_query.py"],
      // "args": ["./example_workflows/debug_examples/openai_chat_async.py"],
      // "args": ["./example_workflows/debug_examples/openai_add_numbers.py"],
      // "args": ["./example_workflows/debug_examples/openai_async_add_numbers.py"],
      // "args": ["./example_workflows/debug_examples/openai_tool_call.py"],
      // "args": ["./example_workflows/debug_examples/openai_document_reader.py"],
      // "args": ["./example_workflows/debug_examples/openai_chat.py"],
      // "args": ["./example_workflows/debug_examples/openai_async_agents.py"],
      // "args": ["./src/runner/monkey_patching/patches/uuid_patches.py"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {"MIROFLOW_USE_SANDBOX_MODE": "true"}
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/src/user_interfaces/vscode_extension"
      ],
      "outFiles": [
        "${workspaceFolder}/src/user_interfaces/vscode_extension/dist/**/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}